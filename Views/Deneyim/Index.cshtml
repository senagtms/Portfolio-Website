@using My_CV.Models.Entity
@model List<TBL_Deneyimler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content-header">
    <h2>Deneyim Listesi</h2>
    <div class="container-fluid">
        <div class="row mb-2">

            <table class="table table-bordered">

                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>Alt Başlık</th>
                        <th>Açıklama</th>
                        <th>Tarih</th>
                        <th>Sil</th>
                        <th>Düzenle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Baslik</td>
                            <td>@item.AltBaslik</td>
                            <td>@item.Aciklama</td>
                            <td>@item.Tarih</td>
                            <td><a href="/Deneyim/DeneyimSil/@item.ID" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Deneyim/DeneyimGetir/@item.ID" class="btn btn-warning" >Düzenle</a></td>
                        </tr>
                    }

               
            </table>
        </div>
    </div>

    <a href="/Deneyim/DeneyimEkle/" class="btn btn-primary">Yeni Deneyim Ekle</a>
</section>
